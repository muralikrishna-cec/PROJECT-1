{
  "name": "ai-code-review-frontend",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "build:css": "postcss src/styles.css -o src/tailwind.css",
    "watch:css": "postcss src/styles.css -o src/tailwind.css --watch",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "dev": "concurrently \"npm run watch:css\" \"ng serve\""
  },
  "prettier": {
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/common": "^20.1.0",
    "@angular/compiler": "^20.1.0",
    "@angular/core": "^20.1.0",
    "@angular/forms": "^20.1.0",
    "@angular/platform-browser": "^20.1.0",
    "@angular/router": "^20.1.0",
    "mermaid": "^11.9.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@angular-builders/custom-webpack": "^20.0.0",
    "@angular-devkit/build-angular": "^20.1.4",
    "@angular/build": "^20.1.3",
    "@angular/cli": "^20.1.3",
    "@angular/compiler-cli": "^20.1.0",
    "@tailwindcss/postcss": "^4.1.11",
    "@types/jasmine": "~5.1.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.0",
    "css-loader": "^7.1.2",
    "jasmine-core": "~5.8.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "monaco-editor": "^0.52.2",
    "monaco-editor-webpack-plugin": "^7.1.0",
    "ngx-build-plus": "^20.0.0",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "style-loader": "^4.0.0",
    "tailwindcss": "^3.4.17",
    "typescript": "~5.8.2",
    "vite-plugin-monaco-editor": "^1.1.0"
  }
}
